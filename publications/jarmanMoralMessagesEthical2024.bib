@article{timmerIdeologyVictimPrecipitation1984,
  title = {The {{Ideology}} of {{Victim Precipitation}}},
  author = {Timmer, Doug A. and Norman, William H.},
  year = 1984,
  journal = {Criminal Justice Review},
